<div class="fixed-player-bar">
  <div class="btn btn-previous" onclick="tm_prev()"><i class="fa fa-fast-backward" aria-hidden="true"></i></div>
  <div class="btn btn-play" onclick="tm_toggle()"><i id="toggle" class="fa fa-play" aria-hidden="true"></i></div>
  <div class="btn btn-next" onclick="tm_next()"><i class="fa fa-fast-forward" aria-hidden="true"></i></div>
  <div class="track-info">
    <span class="song"></span>
    <span class="artist"><a href=""></a></span>
  </div>
  <div id="waveform_container" class="track-wav">
    <progress id="progressTrack" value="0.2" max="1"></progress>
    <img id="waveform" src="" alt="Song Track">
  </div>
  <div class="time"><span id="time"></span>/<span id="duration"></span></div>
  <div id="volume_container" class="volume"><i id="volume-button" class="fa fa-volume-up" aria-hidden="true"></i> <progress id="progressVolume" value="0.35" max="1"></progress></div>
  <div class="btn btn-download">
  	<a id="download" href="" target="_blank">
  		<i class="fa fa-download" aria-hidden="true"></i>
  	</a>
  </div>
	<audio src="" id="current_track" style="display:none;"></audio>
</div>