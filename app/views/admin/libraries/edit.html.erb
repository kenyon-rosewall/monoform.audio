<div class="panel panel-info">
	<div class="panel-heading">Info</div>
	<div class="panel-body">
		<form action="/admin/libraries/<%= @library.id %>" method="post">
			<input type="hidden" class="authenticity_token" name="authenticity_token" value="" />
			<input type="hidden" name="_method" value="PUT" />
			<input type="hidden" name="id" value="<%= @library.id %>" />
			<div class="form-group">
				<label>Name</label>
				<input type="text" name="name" id="name" class="form-control" value="<%= @library.name %>" />
			</div>
			<div class="form-group">
				<label>Description</label>
				<textarea name="description" id="description" class="form-control"><%= @library.description %></textarea>
			</div>
			<button type="submit" class="btn btn-default">Save</button>
		</form>
	</div>
</div>