<div class="panel panel-info">
	<div class="panel-heading">Info</div>
	<div class="panel-body">
		<form action="/admin/publishers/<%= @publisher.id %>" method="post">
			<input type="hidden" class="authenticity_token" name="authenticity_token" value="" />
			<input type="hidden" name="_method" value="PUT" />
			<input type="hidden" name="id" value="<%= @publisher.id %>" />
			<div class="form-group">
				<label>Name</label>
				<input type="text" name="name" id="name" class="form-control" value="<%= @publisher.name %>" />
			</div>
			<div class="form-group">
				<label>PRO Affiliation</label>
				<input type="text" name="pro" id="pro" class="form-control" value="<%= @publisher.pro %>" />
			</div>
			<div class="form-group">
				<label>URL</label>
				<input type="text" name="url" id="url" class="form-control" value="<%= @publisher.url %>" placeholder="http://" />
			</div>
			<button type="submit" class="btn btn-default">Save</button>
		</form>
	</div>
</div>