<div class="panel panel-info">
	<div class="panel-heading">Info</div>
	<div class="panel-body">
		<form action="/admin/composers/<%= @composer.id %>" method="post">
			<input type="hidden" class="authenticity_token" name="authenticity_token" value="" />
			<input type="hidden" name="_method" value="PUT" />
			<input type="hidden" name="id" value="<%= @composer.id %>" />
			<div class="form-group">
				<label>Name</label>
				<input type="text" name="name" id="name" class="form-control" value="<%= @composer.name %>" />
			</div>
			<div class="form-group">
				<label>PRO Affiliation</label>
				<input type="text" name="pro" id="pro" class="form-control" value="<%= @composer.pro %>" />
			</div>
			<div class="form-group">
				<label>URL</label>
				<input type="text" name="url" id="url" class="form-control" value="<%= @composer.url %>" placeholder="http://" />
			</div>
			<div class="form-group">
				<label>Description</label>
				<textarea name="description" id="description" class="form-control"><%= @composer.description %></textarea>
			</div>
			<button type="submit" class="btn btn-default">Save</button>
		</form>
	</div>
</div>