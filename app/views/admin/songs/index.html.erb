<div class="row">
	<div class="col-sm-9">
		<h3>Songs</h3>
	</div>
	<div class="col-sm-3">
		<a href="/admin/songs/new" class="btn btn-success">Add Song</a>
	</div>
</div>

<table class="table table-striped">
	<% @songs.each do |s| %>
	<% s.active ? active_method = 'inactivate' : active_method = 'activate' %>
	<tr>
		<td><%= s.song_id %></td>
		<td><%= s.name %></td>
		<td><%= s.release_date %></td>
		<td><a href="/admin/songs/<%= s.id %>/edit" class="btn btn-success">edit</a></td>
		<td>
			<form action="/admin/songs/<%= s.id %>/<%= active_method %>" method="post">
				<input type="hidden" class="authenticity_token" name="authenticity_token" value="" />
				<input type="hidden" name="_method" value="PUT" />
				<button type="submit" class="btn btn-info"><%= active_method %></button>
			</form>
		</td>
		<td>
			<form action="/admin/songs/<%= s.id %>" method="post">
				<input type="hidden" class="authenticity_token" name="authenticity_token" value="" />
				<input type="hidden" name="_method" value="DELETE" />
				<button type="submit" class="btn btn-danger">delete</button>
			</form>
		</td>
	</tr>
	<% end %>
</table>