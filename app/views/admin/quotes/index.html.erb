<div class="row">
	<div class="col-sm-9">
		<h3>Quotes</h3>
	</div>
	<div class="col-sm-3">
		<a href="/admin/quotes/new" class="btn btn-success">Add Quote</a>
	</div>
</div>

<table class="table table-striped">
	<% @quotes.each do |q| %>
	<tr>
		<td><%= q.content.truncate(50) %></td>
		<td><%= q.author %></td>
		<td><a href="/admin/quotes/<%= q.id %>/edit" class="btn btn-success">edit</a></td>
		<td>
			<form action="/admin/quotes/<%= q.id %>" method="post">
				<input type="hidden" class="authenticity_token" name="authenticity_token" value="" />
				<input type="hidden" name="_method" value="DELETE" />
				<button type="submit" class="btn btn-danger">delete</button>
			</form>
		</td>
	</tr>
	<% end %>
</table>