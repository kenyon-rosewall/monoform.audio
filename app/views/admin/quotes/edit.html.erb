<div class="panel panel-info">
	<div class="panel-heading">Info</div>
	<div class="panel-body">
		<form action="/admin/quotes/<%= @quote.id %>" method="post">
			<input type="hidden" class="authenticity_token" name="authenticity_token" value="" />
			<input type="hidden" name="_method" value="PUT" />
			<input type="hidden" name="id" value="<%= @quote.id %>" />
			<div class="form-group">
				<label>Author</label>
				<input type="text" name="author" id="author" class="form-control" value="<%= @quote.author %>" />
			</div>
			<div class="form-group">
				<label>Content</label>
				<textarea name="content" id="content" class="form-control"><%= @quote.content %></textarea>
			</div>
			<button type="submit" class="btn btn-default">Save</button>
		</form>
	</div>
</div>