<div class="panel panel-info">
	<div class="panel-heading">Info</div>
	<div class="panel-body">
		<form action="/admin/artists/<%= @artist.id %>" method="post" enctype="multipart/form-data">
			<input type="hidden" class="authenticity_token" name="authenticity_token" value="" />
			<input type="hidden" name="_method" value="PUT" />
			<input type="hidden" name="id" value="<%= @artist.id %>" />
			<div class="form-group">
				<label>Name</label>
				<input type="text" name="name" id="name" class="form-control" value="<%= @artist.name %>" />
			</div>
			<div class="form-group">
				<label>URL</label>
				<input type="text" name="url" id="url" class="form-control" value="<%= @artist.url %>" />
			</div>
			<div class="form-group">
				<label>Description</label>
				<textarea name="description" id="description" class="form-control" rows="10"><%= @artist.description %></textarea>
			</div>
			<div class="form-group">
				<label>Image</label>
				<input type="file" class="form-control" name="image" id="image" /><br />
				<% if @artist.image %>
				<img src="data:<%= @artist.image_type %>;base64,<%= Base64.encode64(@artist.image) %>" style="width:200px;height:auto;" />
				<% end %>
			</div>
			<button type="submit" class="btn btn-default">Save</button>
		</form>
	</div>
</div>